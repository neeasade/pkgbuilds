#Maintainer: Nathan Isom nathanisom27[AT]gmail[DOT]com

pkgname=ttf-ionicons
pkgver=v2.0.1
pkgrel=1
pkgdesc="tty release of the ionicon font"
arch=(any)
depends=(fontconfig xorg-font-utils)
source=("git://github.com/driftyco/ionicons/")
install=$pkgname.install
license=('MIT')
md5sums=('SKIP')

pkgver() {
  cd $srcdir/ionicons
  git describe --long --tags | sed -r 's/-([0-9,a-g,A-G]{1}.*)//'
}

package() {
  cd $srcdir/ionicons
  git checkout $pkgver
  install -d "$pkgdir/usr/share/fonts/TTF"
  install -m644 "$srcdir/ionicons/fonts/ionicons.ttf" "$pkgdir/usr/share/fonts/TTF/"
}

